echo 'Enter the array elements: 6 2 17 3 9 17 2 8'
echo 'Output: parities of elements do not match parities of indices.'
echo '===================================================='
./a.out <<-EndOfInput
5
3 8 9 6 17
EndOfInput
echo '----------------------------------------------------'
echo 'Expected:'
echo 'Enter the length of the input array: 5'
echo 'Enter the array elements: 3 8 9 6 17'
echo 'Output: parities of elements do not match parities of indices.'
echo '===================================================='
./a.out <<-EndOfInput
3
2 11 56
EndOfInput
echo '----------------------------------------------------'
echo 'Expected:'
echo 'Enter the length of the input array: 3'
echo 'Enter the array elements: 2 11 56'
echo 'Output: parities of elements match parities of indices.'
echo '===================================================='
./a.out <<-EndOfInput
